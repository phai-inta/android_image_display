<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="560dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="363dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp">

            <TableRow
                android:layout_width="200dp"
                android:layout_height="317dp">

                <ImageView
                    android:id="@+id/moon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:onClick="moonClickHandler"
                    app:srcCompat="@drawable/moon" />

                <ImageView
                    android:id="@+id/sun_view"
                    android:layout_width="132dp"
                    android:layout_height="151dp"
                    android:layout_weight="1"
                    android:onClick="sunClickHandler"
                    app:srcCompat="@drawable/sun" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/moon_title"
                    android:layout_weight="1"
                    android:text="@string/moon_title" />

                <TextView
                    android:id="@+id/sun_title"
                    android:layout_weight="1"
                    android:text="@string/sun_title" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="168dp">

                <ImageView
                    android:id="@+id/pluto_view"
                    android:layout_width="wrap_content"
                    android:layout_height="142dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:onClick="plutoClickHandler"
                    app:srcCompat="@drawable/pluto" />

                <ImageView
                    android:id="@+id/earth_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="earthClickHandler"
                    app:srcCompat="@drawable/earth" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/pluto_title"
                    android:layout_weight="1"
                    android:text="@string/pluto_title" />

                <TextView
                    android:id="@+id/earth_title"
                    android:layout_weight="1"
                    android:text="@string/earth_title" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>