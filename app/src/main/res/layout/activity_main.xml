<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="560dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="363dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp">

            <TableRow
                android:layout_width="200dp"
                android:layout_height="317dp">

                <ImageView
                    android:id="@+id/macaroon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:onClick="macaroonClickHandler"
                    app:srcCompat="@drawable/macaroon" />

                <ImageView
                    android:id="@+id/croissant_view"
                    android:layout_width="132dp"
                    android:layout_height="151dp"
                    android:layout_weight="1"
                    android:onClick="croissantClickHandler"
                    app:srcCompat="@drawable/croissant" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/macaroon_title"
                    android:layout_weight="1"
                    android:text="Macaroon"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/croissant_title"
                    android:layout_weight="1"
                    android:text="Croissant"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="168dp">

                <ImageView
                    android:id="@+id/muffin_view"
                    android:layout_width="wrap_content"
                    android:layout_height="142dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:onClick="muffinClickHandler"
                    app:srcCompat="@drawable/muffin" />

                <ImageView
                    android:id="@+id/tiramisu_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="tiramisuClickHandler"
                    app:srcCompat="@drawable/tiramisu" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/muffin_title"
                    android:layout_weight="1"
                    android:text="Muffin"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tiramisu_title"
                    android:layout_weight="1"
                    android:text="Tiramisu"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>